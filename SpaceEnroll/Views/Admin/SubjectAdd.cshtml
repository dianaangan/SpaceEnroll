@model SpaceEnroll.Models.AddSubjectViewModel

@{
    ViewData["Title"] = "Add Subject";
    <link rel="stylesheet" href="~/css/Student.css" asp-append-version="true">
}

<div class="addRequisite-form-container">
    <div class="addRequisite-form">
            <h2 id="formTitle">SUBJECT INFORMATION</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger custom-error" role="alert" id="tempDataAlert">
                    <span>@TempData["ErrorMessage"]</span>
                    <button type="button" class="close-btn" aria-label="Close" onclick="closeAlert()">&times;</button>
                </div>
            }

            <form asp-action="SubjectAdd" method="post" id="subjectForm">
                <!-- Validation Summary -->
                <div class="validation-summary">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>

                <div class="form-group">
                    <input type="text" placeholder="Subject Code" asp-for="SubjectCode" required />
                    <span asp-validation-for="SubjectCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Description" asp-for="Description" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="Units" required>
                        <option value="" disabled selected>Select Unit</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                    <span asp-validation-for="Units" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="Category" required>
                        <option value="" disabled selected>Select Category</option>
                        <option value="Lecture">Lecture</option>
                        <option value="Laboratory">Laboratory</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="Offering" required>
                        <option value="" disabled selected>Select Offering</option>
                        <option value="1st Semester">1st Semester</option>
                        <option value="2nd Semester">2nd Semester</option>
                        <option value="Summer">Summer</option>
                    </select>
                    <span asp-validation-for="Offering" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="CourseCode" required>
                        <option value="" disabled selected>Select Course Code</option>
                        <option value="BSIT">BSIT</option>
                        <option value="BSIS">BSIS</option>
                        <option value="ACT">ACT</option>
                    </select>
                    <span asp-validation-for="CourseCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="CurriculumYear" required>
                        <option value="" disabled selected>Select Curriculum Year</option>
                        <option value="1st Year">1st Year</option>
                        <option value="2nd Year">2nd Year</option>
                        <option value="3rd Year">3rd Year</option>
                        <option value="4th Year">4th Year</option>
                    </select>
                    <span asp-validation-for="CurriculumYear" class="text-danger"></span>
                </div>

                <div class="form-buttons">
                    <button type="button" class="cancel-btn" onclick="location.href='@Url.Action("SubjectList", "Admin")'">CANCEL</button>
                    <button type="submit" class="save-btn">SAVE</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        Html.PartialAsync("_ValidationScriptsPartial").GetAwaiter().GetResult();
    }
    <script>
        function closeAlert() {
            document.getElementById("tempDataAlert").style.display = "none";
        }
    </script>
}

