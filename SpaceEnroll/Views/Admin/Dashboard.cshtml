@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .image-home {
        width: 1629px;
        height: 855px;
        position: absolute;
        top: 9px;
        left: 103px;
        opacity: 0;
        animation: slideUp 0.8s ease-out forwards;
        animation: scaleIn 0.6s ease-out 0.3s forwards;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }


    .btn-go-home {
        top: 426px;
        left: -48px;
        opacity: 0;
        animation: slideUp 0.8s ease-out forwards;
        animation: scaleIn 0.6s ease-out 0.3s forwards;
    }

    .central-body {
        position: relative; /* if you want positioning relative to this container */
    }
</style>

<div class="central-body">
    <img class="image-home" src="/Pictures/BG-HOME.png">
</div>